{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["tables"],
    "properties": {
        "$schema": {
            "type": "string"
        },
        "schemaVersion": {
            "type": "string",
            "pattern": "^v[0-9]+(\\.[0-9]+)*$"
        },
        "tables": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["tableName", "columns"],
                "properties": {
                    "tableName": {
                        "type": "string",
                        "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
                    },
                    "columns": {
                        "type": "array",
                        "minItems": 1,
                        "items": {
                            "type": "object",
                            "required": ["columnName", "dataType"],
                            "properties": {
                                "columnName": {
                                    "type": "string",
                                    "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
                                },
                                "dataType": {
                                    "type": "string",
                                    "enum": ["UUID", "VARCHAR", "INTEGER", "TIMESTAMP"]
                                },
                                "length": { "type": "integer", "minimum": 1 },
                                "isNullable": { "type": "boolean" },
                                "isUnique": { "type": "boolean" },
                                "defaultValue": {
                                    "type": ["string", "number", "boolean", "null"]
                                }
                            },
                            "additionalProperties": false
                        }
                    },
                    "primaryKey": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
                        },
                        "minItems": 1
                    },
                    "foreignKeys": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "columnName": {
                                    "type": "string",
                                    "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
                                },
                                "referencedTable": {
                                    "type": "string",
                                    "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
                                },
                                "referencedColumn": {
                                    "type": "string",
                                    "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
                                },
                                "relationshipName": {
                                    "type": "string",
                                    "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
                                }
                            },
                            "required": ["columnName", "referencedTable", "referencedColumn"],
                            "additionalProperties": false
                        }
                    }
                },
                "additionalProperties": false
            }
        }
    },
    "additionalProperties": false
}
